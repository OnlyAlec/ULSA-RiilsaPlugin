{
    "name": "riilsa/wordpress-plugin",
    "description": "Custom functionality for the RIILSA website with Clean Architecture implementation",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Alexis Chacon Trujillo",
            "homepage": "https://github.com/OnlyAlec/"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3",
        "vlucas/phpdotenv": "^5.6",
        "egulias/email-validator": "^4.0",
        "getbrevo/brevo-php": "1.x.x",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "RIILSA\\": "includes/"
        },
        "files": [
            "includes/Core/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RIILSA\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs-check": "php-cs-fixer fix --dry-run --config=.php-cs-fixer.php"
    }
}
